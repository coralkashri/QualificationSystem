<span ng-init="init_tasks_page();"></span>

<% if (typeof action === 'undefined') { %>
    <!--Show all users list-->
    <span ng-init="get_all_topics();"></span>
    <ul class="collapsible popout">
        <li ng-repeat="task_data in topics_list | orderBy: ['-is_active', 'name']">
            <div class="collapsible-header" ng-class="{grey: !task_data.is_active}">{{task_data.name}}</div>

            <div class="collapsible-body">
                <div ng-if="!task_data.is_active">
                    <div class="valign-wrapper flash flash-warn" style="width: 100%;">
                        <i class="material-icons" style="padding-right: 5px;">warning</i>
                        This topic is currently inactive.
                    </div>
                </div>
                <div>{{task_data.description}}</div>
            </div>

            <div class="collapsible-footer">
                <a class="btn-small waves-effect waves-light"
                   href="/view/admin-panel/topics-management/t{{task_data.name}}"
                   title="Management">
                    <i class="material-icons">settings</i>
                </a>

                <a ng-if="task_data.is_active"
                   class="btn-small waves-effect waves-light"
                   ng-click="archive_topic(task_data.name);"
                   title="Archive">
                    <i class="material-icons">archive</i>
                </a>

                <a ng-if="!task_data.is_active"
                   class="btn-small waves-effect waves-light"
                   ng-click="reactivate_topic(task_data.name);"
                   title="Reactivate">
                    <i class="material-icons">unarchive</i>
                </a>

                <a class="btn-small waves-effect waves-light"
                   ng-click="delete_topic(task_data.name);"
                   title="Delete">
                    <i class="material-icons">delete</i>
                </a>
            </div>
        </li>
    </ul>
    <div class="row">
        <div class="col s12 m4">
            <a class="btn-small btn-floating waves-effect waves-light" href="/view/admin-panel/tasks-management/new-task">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>
<% } else if (action == "view" && typeof task_id_for_details !== "undefined") { %>
    <!--Show specific task details-->
    <div ng-init="get_task_details('<%= task_id_for_details %>'); init_modify_task_page();">
        <h4>{{original_task_title}}</h4><br>
        <form ng-submit="modify_task(task_data);">

            <!--Task's Title-->
            <div class="row">
                <div class="input-field col s12">
                    <input id="task_title" ng-model="task_data.title" type="text" class="validate">
                    <label for="task_title">Task Title</label>
                </div>
            </div>

            <!--Topic Name selection-->
            <div class="row">
                <div class="input-field col s12">
                    <select id="task_topic_name" ng-model="task_data.topic_name">
                        <option value="" disabled selected>Select Topic</option>
                        <option value="{{topic_data.name}}" ng-repeat="topic_data in topics_list | orderBy: ['-is_active', 'name']">{{topic_data.name}}</option>
                    </select> <!--Update in js-->
                    <label for="task_topic_name">Select Topic</label>
                </div>
            </div>

            <!--Task's Details-->
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="details" ng-model="task_data.details" class="validate materialize-textarea"></textarea>
                    <label for="details">Details</label>
                </div>
            </div>

            <!--Search Keywords-->
            <div class="row">
                <div class="col s12">
                    <div>Search keywords:</div>
                    <div class="input-field col s12 chips" id="search_keywords"></div>
                </div>
            </div>

            <!--Check Point type-->
            <div class="row">
                <div class="input-field col s12">
                    <select id="check_point" ng-model="task_data.check_point">
                        <option selected value="NONE">None</option>
                        <option value="SOFT">Soft</option>
                        <option value="STRONG">Strong</option>
                    </select>
                    <label for="check_point">Check Point</label>
                </div>
            </div>

            <!--Files Sections-->
            <div class="row" ng-if="task_data.file_names.length > 0">
                <div class="col s12">
                    <div>Current Files:</div>
                    <ul id="task_current_files_list">
                        <li ng-repeat="filename in task_data.file_names" class="row">
                            <div class="col s6">
                                {{filename}}
                            </div>
                            <div class="col s6">
                                <a class="btn-small btn-floating waves-effect waves-light" ng-click="remove_file_from_task(task_data, filename);">
                                    <i class="material-icons">delete</i>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col s12" id="files_section">
                    <div id="file_section_block_0">
                        <div class="file-field input-field" id="file_section_0">
                            <div class="btn">
                                <span>Files</span>
                                <input type="file" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" placeholder="Upload one or more files">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12">
                    <a class="btn-small waves-effect waves-light" ng-click="add_input_row('files_section', 'file', task_data.files);">
                        Add more files from different directory
                    </a>
                </div>
            </div>

            <!--Codes Sections-->
            <div class="row">
                <div class="col s12" id="codes_section"></div>
                <div style="padding-top: 10px;" class="col s12">
                    <a class="btn-small waves-effect waves-light" ng-click="add_input_row('codes_section', 'code', task_data.code_sections);">
                        Add code section
                    </a>
                </div>
            </div>

            <!--Answer type-->
            <div class="row">
                <div class="input-field col s12">
                    <select id="answer_type" ng-model="task_data.answer_type" ng-change="change_answer_type();">
                        <option selected value="TEXT_STRONG">Text (Strong match)</option>
                        <option value="TEXT_SOFT">Text (Soft match)</option>
                        <option value="TEXT_FREE">Text (Human check)</option>
                        <option value="FILES">Files / Videos / Code Files</option>
                        <option disabled value="COMPILATION_RESULT">Compilation result (code)</option>
                        <option value="BOOLEAN">Boolean</option>
                        <option value="MULTIPLE_CHOICES">Multiple Choices</option>
                    </select>
                    <label for="answer_type">Answer Type</label>
                </div>
            </div>

            <!--BOOLEAN / MULTIPLE_CHOICES answer-->
